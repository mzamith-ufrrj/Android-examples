<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/btnUdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_udp" />

        <Button
            android:id="@+id/btnTCP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_tcp" />

        <Button
            android:id="@+id/btnHttps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_https" />
        <Button
            android:id="@+id/btnWiFiAPs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_wifi_aps" />

        <TextView
            android:id="@+id/label_Socket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="@string/edt_socket" />

        <EditText
            android:id="@+id/edt_socket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:text="@string/edt_socket_ip_port" />
<!--
        <FrameLayout
            android:id="@+id/out_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_ufrrj">

        </FrameLayout>
-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutActivityIII">


    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>
            <TextView
                android:id="@+id/txt_view_II_a1"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/txt_view_default" />

            <TextView
                android:id="@+id/txt_view_II_b1"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/txt_view_default" />

            <TextView
                android:id="@+id/txt_view_II_c1"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/txt_view_default" />
        </TableRow>


        <TableRow>
            <TextView
                android:id="@+id/txt_view_II_a2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/txt_view_default" />

            <TextView
                android:id="@+id/txt_view_II_b2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/txt_view_default" />

            <TextView
                android:id="@+id/txt_view_II_c2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/txt_view_default" />
        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/btn_iii_prev"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:text="@string/btn_prev_label" />

            <Button
                android:id="@+id/btn_iii_next"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:text="@string/btn_next_label" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Envie uma msg:" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutActivityII">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_view_II_a"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/txt_view_default" />

        <TextView
            android:id="@+id/txt_view_II_b"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/txt_view_default" />

        <TextView
            android:id="@+id/txt_view_II_c"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/txt_view_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_ii_prev"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:text="@string/btn_prev_label" />

            <Button
                android:id="@+id/btn_ii_next"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:text="@string/btn_next_label" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>